@model ALittleLeaf.ViewModels.UserLoggedViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Login & Registration Form</title>
    <link rel="stylesheet" href="~/css/login.css">
    <script src="/js/validLoginAndRegistry.js" defer></script>
</head>
<body>
    <div class="login-wrap">
        <div class="login-title-wrap">
            <div class="header">
                <h1>
                    Đăng nhập
                    <br>
                    Admin
                </h1>
            </div>
        </div>
        <div class="form-wrap">
            <div class="form">
                <form asp-area="Admin" asp-controller="Account" asp-action="Login" method="post" onsubmit="return checkLogin()">
                    @Html.AntiForgeryToken()
                    <div class="errors-wrap">
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <span class="show-error" id="error-all" style="display: block;">@ViewBag.ErrorMessage</span>
                        }
                    </div>
                    <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl">
                    <div class="input-wrap">
                        <input asp-for="UserEmail" type="email" name="UserEmail" id="email" placeholder="Email">
                    </div>
                    <div class="errors-wrap">
                        <span class="show-error" id="error-email">*Vui lòng nhập Email của bạn</span>
                    </div>
                    <div class="input-wrap">
                        <input asp-for="UserPassword" type="password" name="UserPassword" id="password" placeholder="Mật khẩu">
                    </div>
                    <div class="errors-wrap">
                        <span class="show-error" id="error-password">*Vui lòng nhập mật khẩu của bạn</span>
                    </div>
                    <div class="others-wrap">
                        <div class="button-wrap">
                            <button class="sign-in-btn" type="submit" value="login">ĐĂNG NHẬP</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>