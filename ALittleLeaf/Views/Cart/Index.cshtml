@{
    var cart = ViewData["Cart"] as List<ALittleLeaf.ViewModels.CartItemViewModel> ?? new List<ALittleLeaf.ViewModels.CartItemViewModel>();
    ViewData["Title"] = "Giỏ hàng";
}

@section Styles {
    <link rel="stylesheet" href="~/css/cart.css" />
}
<!--------------------------------------------LAYOUT-CART----------------------------------------------------->
<div class="layout-cart">
    <div class="container-fluid">
        <div class="nav-header-wrap">
            <div class="nav-header">
                <ol>
                    <li>
                        <a asp-controller="Home" asp-action="Index">
                           <span>Trang chủ</span>
                        </a>
                        <meta itemprop="position" content="1">
                    </li>
                    <li class="active">
                        <span>
                            <span class="total-items">Giỏ hàng (@(ViewData["CartItemCount"] ?? 0))</span>
                        </span>
                        <meta itemprop="position" content="2">
                    </li>
                </ol>
            </div>
        </div>
        <div class="cart-page">
            <div class="heading-page">
                <div class="header-page">
                    <h1>Giỏ hàng của bạn</h1>
                    <p class="count-cart">
                        Có <span>@(ViewData["CartItemCount"] ?? 0) sản phẩm</span> trong giỏ hàng
                    </p>
                </div>
            </div>
            <div class="cart-content-wrap">
                <div class="notifications" @(cart.Count > 0 ? "style=display:none;" : "")>
                    Giỏ hàng của bạn đang trống
                    <p class="link-continue">
                        <a asp-controller="Collections" asp-action="Index" class="button dark">
                            <button>
                                <i class="fa fa-reply"></i>
                                TIẾP TỤC MUA HÀNG
                            </button>
                        </a>
                    </p>
                </div>
                <div class="cart-container" @(cart.Count == 0 ? "style=display:none;" : "")>
                    <div class="main-content-cart">
                        <form asp-controller="Cart" asp-action="GetCartNote" id="cartformpage" method="post">
                            <div class="display-items">
                                <table class="table-cart">
                                    <tbody>
                                            @foreach (var item in cart)
                                            {
                                                // Hiển thị thông tin sản phẩm trong giỏ hàng
                                                <tr class="line-item-container" data-product-id="@item.ProductId">
                                                    <td class="image">
                                                        <div class="product-img">
                                                            <a asp-controller="Product" asp-action="Index" asp-route-productId="@item.ProductId" asp-route-idCategory="@item.IdCategory">
                                                                <img src="~/img/prdImg/@item.ProductImg" alt="@item.ProductName">
                                                            </a>
                                                        </div>
                                                    </td>
                                                    <td class="item">
                                                        <a asp-controller="Product" asp-action="Index" asp-route-productId="@item.ProductId" asp-route-idCategory="@item.IdCategory">
                                                            @item.ProductName
                                                        </a>
                                                        <p>
                                                            <span>@String.Format("{0:N0}₫", item.ProductPrice)</span>
                                                        </p>
                                                        <div class="qty-click">
                                                            <button type="button" class="qtyminus qty-btn" data-product-id="@item.ProductId">-</button>
                                                            <input type="text" size="4" min="1" data-price="@item.ProductPrice" value="@item.Quantity" class="item-quantity" data-product-id="@item.ProductId">
                                                            <button type="button" class="qtyplus qty-btn" data-product-id="@item.ProductId">+</button>
                                                        </div>
                                                        <p class="price">
                                                            <span class="text">Thành tiền</span>
                                                            <!-- THÊM: class "line-item-total-display" -->
                                                            <span class="line-item-total line-item-total-display" data-product-id="@item.ProductId">
                                                                @String.Format("{0:N0}₫", item.ProductPrice * item.Quantity)
                                                            </span>
                                                        </p>
                                                    </td>
                                                    <td class="remove">
                                                        <!-- SỬA: Dùng class "remove-from-cart-ajax" -->
                                                        <a href="#" class="remove-from-cart-ajax" data-product-id="@item.ProductId">
                                                            <ion-icon name="close-outline"></ion-icon>
                                                        </a>
                                                    </td>
                                                </tr>                                            }
                                    </tbody>
                                </table>
                            </div>
                            <div class="cart-others">
                                <div class="note-wrap">
                                    <div class="checkout-note">
                                        <textarea name="BillNote" id="note" cols="50" rows="8" placeholder="Ghi chú"></textarea>
                                    </div>
                                </div>
                                <div class="order-actions-wrap">
                                    <p class="order-infor">
                                        Tổng tiền
                                        <span class="total-price">
                                                <b id="cart-page-total" class="cart-total-display">
                                                    @String.Format("{0:N0}₫", (int)(ViewData["CartTotalPrice"] ?? 0))
                                                </b>
                                            </span>
                                    </p>
                                    <div class="cart-buttons">
                                        <a asp-asp-controller="Collections" asp-action="Index">
                                            <button type="button">
                                                <i class="fa fa-reply"></i>
                                                TIẾP TỤC MUA HÀNG
                                            </button>
                                        </a>
                                        <button type="submit" id="checkout" class="btn-checkout" name="checkout">
                                            Thanh toán
                                        </button>
                                    </div>
                                </div>
                            </div
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>