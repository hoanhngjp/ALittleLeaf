@model ALittleLeaf.ViewModels.EditUserViewModel
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Thông tin người dùng";
    var categories = ViewData["categories"] as List<ALittleLeaf.ViewModels.CollectionsMenuViewModel>;
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Sửa thông tin người dùng</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Sửa thông tin người dùng</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div><!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <div class="card card-primary"> 
    <div class="card-header">
        <h3 class="card-title">Thông tin người dùng</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <form asp-action="ChangeUserInfo" asp-controller="AdminChangeUserInfo" method="post">
            <div class="form-group">
                <label for="user_fullname">Tên người dùng</label>
                <input type="text" class="form-control" id="user_fullname" name="UserFullname" value="@Model.UserFullname" required>
            </div>
            <input type="hidden" name="UserId" value="@Model.UserId">
            
            <div class="form-group">
                <label for="user_email">Email</label>
                <input type="email" class="form-control" id="user_email" name="UserEmail" value="@Model.UserEmail" required>
            </div>

            <div class="form-group">
                <label for="user_password">Mật khẩu mới</label>
                <input type="password" class="form-control" id="user_password" name="UserNewPassword" value="">
            </div>

            <div class="form-group">
                <label for="user_sex">Giới tính</label>
                                    <select class="form-control" id="user_sex" name="UserSex">
                                        @if (Model.UserSex == true)
                                        {
                                            <option value="true" selected>Nữ</option>
                                            <option value="false">Nam</option>
                                        }
                                        else
                                        {
                                            <option value="true">Nữ</option>
                                            <option value="false" selected>Nam</option>
                                        }
                                    </select>
            </div>

            <div class="form-group">
                <label for="user_birthday">Ngày sinh</label>
                                    <input type="date" class="form-control" id="user_birthday" name="UserBirthday" value="@Model.UserBirthday.ToString("yyyy-MM-dd")" required>
            </div>

            <div class="form-group">
                <label for="user_isActive">Trạng thái</label>
                <select class="form-control" id="user_isActive" name="UserIsActive">
                    @if(Model.UserIsActive == true)
                                        {
                                            <option value="true" selected>Đang hoạt động</option>
                                            <option value="false">Khóa</option>
                                        }
                                        else
                                        {
                                            <option value="true">Hoạt động</option>
                                            <option value="false" selected>Đang bị khóa</option>
                                        }
                </select>
            </div>

            <div class="form-group">
                <label for="user_role">Vai trò</label>
                <select class="form-control" id="user_role" name="UserRole">
                                        @if (Model.UserRole == "customer")
                                        {
                                            <option value="admin">Admin</option>
                                            <option value="customer" selected>Khách hàng</option>
                                        }
                                        else
                                        {
                                            <option value="admin" selected>Admin</option>
                                            <option value="customer">Khách hàng</option>
                                        }
                                    </select>
            </div>
            <button type="submit" class="btn btn-primary">Cập nhật thông tin người dùng</button>
        </form>
    </div>
    <!-- /.card-body -->
</div>

                    <!-- /.card -->
                </div>
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
</div>
<!-- ./wrapper -->
