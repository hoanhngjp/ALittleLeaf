@model ALittleLeaf.ViewModels.ProductDetailViewModel

@section Styles {
    <link rel="stylesheet" href="~/css/product.css" />
}
@section HeadScripts {
    <script src="~/js/product_function.js" defer></script>
}
@{
    ViewData["Title"] = @Model.ProductName;
    bool isUserLoggedIn = User.Identity?.IsAuthenticated ?? false;

    string currentUrl = Context.Request.Path + Context.Request.QueryString;
}
<!--------------------------------------------PRODUCT----------------------------------------------------->
<div class="productDetail-page">
    <div class="main-wrap">
        <div class="nav-header-wrap">
            <div class="nav-header">
                <ol>
                    <li>
                        <a asp-controller="Home" asp.action="Index">
                            <span>Trang chủ</span>
                        </a>
                        <meta itemprop="position" content="1">
                    </li>
                    <li>
                        <a asp-controller="Collections" asp.action="Index" asp-route-categoryId="@Model.IdCategory">
                            <span>@Model.CategoryName</span>
                        </a>
                        <meta itemprop="position" content="2">
                    </li>
                    <li class="active">
                        <span>
                            <span>@Model.ProductName</span>
                        </span>
                        <meta itemprop="position" content="3">
                    </li>
                </ol>
            </div>
        </div>
        <div class="product-detail-wrap">
            <div class="product-detail-2-wrap">
                <div class="product-detail-main">
                    <div class="product-content-img">
                        <div class="product-gallery">
                            <div class="product-gallery-container">
                                <div class="product-gallery-thumbs">
                                    @foreach(var image in Model.ProductImages)
                                    {
                                        <div class="product-gallery-thumb">
                                            <a href="#" class="thumb-placeholder">
                                                <img src="~/img/prdImg/@image" alt="@Model.ProductName">
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="product-image-detail">
                                <div class="product-image-wrap">
                                    <img class="product-img-feature" src="~/img/prdImg/@Model.PrimaryImage" alt="@Model.ProductName">
                                </div>
                            </div>
                            <script src="~/js/changeProductPicture.js" defer></script>
                        </div>
                    </div>
                    <div class="product-content-desc">
                        <div class="product-title">
                            <h1>@Model.ProductName</h1>
                            <span id="pro-sku">SKU: BPHTBGUHH-1</span>
                        </div>
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert-error" style="color: #721c24; background-color: #f8d7da; border-color: #f5c6cb; padding: 10px; margin: 10px 0; border-radius: 5px; font-size: 14px;">
                                <i class="fa-solid fa-triangle-exclamation"></i> @TempData["Error"]
                            </div>
                        }
                        <div class="product-price">
                            <span class="pro-price">@Model.ProductPrice.ToString("N0")₫</span>
                        </div>
                        <form class="form-add-item" asp-controller="Cart" asp-action="AddToCart" method="post">
                            <input type="hidden" name="ProductId" value="@Model.ProductId">
                            <div class="selector-actions">
                                <div class="quantity-area">
                                    <input id="minusBtn" class="qty-btn" type="button" value="-">
                                    <input type="number" id="quantity" class="quantity-selector" name="quantity" value="1" min="1" data-product-id="@Model.ProductId">
                                    <input id="plusBtn" class="qty-btn" type="button" value="+">
                                </div>
                                @if(Model.QuantityInStock > 0)
{
    <div class="wrap-addcart">
        @if (isUserLoggedIn)
        {
            // --- TRƯỜNG HỢP 1: ĐÃ LOGIN ---
            // Hiển thị nút Submit để POST form bình thường
            <button type="submit" id="add-to-cart" class="addToCartProduct">Thêm vào giỏ</button>
        }
        else
        {
            // --- TRƯỜNG HỢP 2: CHƯA LOGIN ---
            // Hiển thị thẻ A dẫn đến trang Login
            // ReturnUrl = Trang sản phẩm hiện tại (để login xong quay lại đây mua tiếp)
            <a href="/Account/Login?ReturnUrl=@System.Net.WebUtility.UrlEncode(currentUrl)" 
               class="addToCartProduct"">
                Thêm vào giỏ
            </a>
        }
    </div>
}
else
{
    <div class="wrap-addcart">
        <button type="button" class="addToCartProduct" style="background-color: red; cursor: not-allowed;" disabled>HẾT HÀNG</button>
    </div>
}
                            </div>
                        </form>
                        <div class="product-description">
                            <div class="title">
                                <h2>Mô tả</h2>
                            </div>
                            <div class="description-content">
                                <div class="description-productdetail">
                                    @Html.Raw(Model.ProductDescription?.Replace("\r", "").Replace("\n", "<br>"))
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @await Component.InvokeAsync("RelatedProducts", new { productId = Model.ProductId, idCategory = Model.IdCategory })

            </div>
        </div>
    </div>
</div>

