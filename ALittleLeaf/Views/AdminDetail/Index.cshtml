@model List<ALittleLeaf.ViewModels.OrderDetailViewModel>

@section ChangeUserInfoSection{
    <link rel="stylesheet" href="~/admin/changeUserInfo.css">
}
@{
    Layout = "_LayoutAdmin";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Chi tiết đơn hàng - @ViewBag.BillId</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Trang chủ</a></li>
                        <li class="breadcrumb-item active">...</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Đơn Hàng -->
    <div class="donhang">
        <table id="userTable" class="table-header">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên sản phẩm</th>
                    <th>Hình ảnh</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 1;
                    int billTotal = Model.Sum(i=> i.Quantity * i.UnitPrice);
                }
                @foreach(var product in Model)
                {
                    <!--Mỗi Product trong Bill 1 tr-->
                    <tr>
                        <td>@count</td>
                        <td>@product.ProductName</td>
                        <td class="img-container"><img src="~/img/prdImg/@product.ProductImg" alt="@product.ProductName"></td>
                        <td>@product.Quantity</td>
                        <td>@product.UnitPrice.ToString("N0")₫</td>
                        <td>@product.TotalPrice.ToString("N0")₫</td>
                    </tr>
                    count++;
                }
            </tbody>
            <tfoot>
                <td colspan="4">Tổng tiền: </td>
                <td colspan="2">@billTotal.ToString("N0")₫</td>
            </tfoot>
        </table>
    </div>
</div>
        <!-- jQuery -->
        <script src="~/plugins/jquery/jquery.min.js"></script>
        <!-- jQuery UI 1.11.4 -->
        <script src="~/plugins/jquery-ui/jquery-ui.min.js"></script>
