@model ALittleLeaf.ViewModels.ProductStatisticsViewModel
@section ChangeUserInfoSection {
    <link rel="stylesheet" href="~/css/changeUserInfo.css">
}
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Thống kê";
    int stt = 1;
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Thống kê sản phẩm</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Thống kê</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box shadow-sm text-center bg-primary text-white">
                    <div class="inner">
                        <!--Tổng đơn hàng-->
                        <h3>@Model.TotalProducts.ToString("N0")</h3>
                        <p>Tổng số sản phẩm</p>
                    </div>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box shadow-sm text-center bg-success text-white">
                    <div class="inner">
                        <!--Tổng ng dùng-->
                        <h3>@Model.TotalSoldProducts.ToString("N0")</h3>
                        <p>Tổng số đã bán</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box shadow-sm text-center bg-warning text-dark">
                    <div class="inner">
                        <!--Tổng số lượng sản phẩm-->
                        <h3>@Model.TotalStock.ToString("N0")</h3>
                        <p>Tổng số tồn kho</p>
                    </div>
                </div>
            </div>
        </div>
        <!-- Bảng sản phẩm bán chạy -->
        <div class="card shadow-sm">
            <div class="card-header bg-secondary text-white">
                <h5>Top 10 Sản Phẩm Bán Chạy</h5>
            </div>
            <div class="card-body">
                <table class="table table-striped table-hover text-center">
                    <thead class="table-dark">
                        <tr>
                            <th>ID Sản Phẩm</th>
                            <th>Tên Sản Phẩm</th>
                            <th>Số Lượng Đã Bán</th>
                            <th>Tồn Kho</th>
                            <th>Chi Tiết</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.TopSellingProducts)
                        {
                            <tr>
                                <td>@product.ProductId</td>
                                <td>@product.ProductName</td>
                                <td>@product.QuantitySold</td>
                                <td>@product.Stock</td>
                                <td>
                                    <a asp-controller="AdminProductInfo" asp-action="Index" asp-route-productId="@product.ProductId" style="color: black;">
                                        <i class="fa fa-eye"></i>
                                        Chi tiết
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- ./wrapper -->
