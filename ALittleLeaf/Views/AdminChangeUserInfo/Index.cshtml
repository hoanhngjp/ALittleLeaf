@model IEnumerable<ALittleLeaf.Models.User>
@{
    Layout = "_LayoutAdmin";
}
@section ChangeUserInfoSection{
    <link rel="stylesheet" href="~/admin/changeUserInfo.css">
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Sửa thông tin người dùng</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="AdminChangeUserInfo" asp-action="Index">Trang chủ</a></li>
                        <li class="breadcrumb-item active">...</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
       </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Khách hàng -->
    <div class="khachhang">
        <div class="table-footer">
            <select id="kieuTimKhachHang" name="kieuTimKhachHang">
                <option value="id">Tìm theo ID</option>
                <option value="email">Tìm theo Email</option>
                <option value="ten">Tìm theo Họ tên</option>
            </select>
            <input id="tukhoa" type="text" placeholder="Tìm kiếm..." onkeyup="timKiemNguoiDung(this)">
            <button onclick="timKiemNguoiDung()"><i class="fa fa-search"></i> Tìm</button>
        </div>
    </div> <!-- // khach hang -->
    <div class="wrap-table" id="resultUser">
        <table id="userTable">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Email</th>
                    <th>Mật khẩu</th>
                    <th>Họ và Tên</th>
                    <th>Giới tính</th>
                    <th>Ngày sinh</th>
                    <th>Trạng thái tài khoản</th>
                    <th>Loại tài khoản</th>
                    <th>Ngày tạo</th>
                    <th>Ngày cập nhật</th>
                    <th>Cập nhật thông tin</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <form action="" method="post">
                    <tr>
                        <td>@user.UserId</td>
                        <input type="hidden" name="UserId" value="@user.UserId">
                        <td class="editable">
                            <input type="text" name="UserEmail" value="@user.UserEmail">
                        </td>
                        <td class="editable">
                            <input type="text" name="UserPassword" value="@user.UserPassword">
                        </td>
                        <td class="editable">
                            <input type="text" name="UserFullname" value="@user.UserFullname">
                        </td>
                        <td>
                            <select name="UserSex">
                                @if(user.UserSex == true)
                                {
                                    <option value="Male" selected>Nam</option>
                                    <option value="Female">Nữ</option>
                                }
                                else
                                {
                                    <option value="Male">Nam</option>
                                    <option value="Female" selected>Nữ</option>
                                }
                            </select>
                        </td>
                        <td class="editable">
                            <input type="text" name="UserBirthday" value="@user.UserBirthday">
                        </td>
                        <td>
                             <select name="user_isActive" >
                                @if(user.UserIsActive == true)
                                {
                                    <option value="1" selected>Hoạt động</option>
                                    <option value="0">Khóa</option>
                                }
                                else
                                {
                                    <option value="1">Hoạt động</option>
                                    <option value="0" selected>Khóa</option>
                                }
                            </select>
                        </td>
                        <td class="editable">
                            <input type="text" name="UserRole" value="@user.UserRole">
                        </td>
                        <td class="editable">
                            <input type="text" name="CreatedAt" value="@user.CreatedAt">
                        </td>
                        <td class="editable">
                            <input type="text" name="UpdatedAt" value="@user.UpdatedAt">
                        </td>
                        <td>
                            <button class="sign-in-btn" type="submit" value="login">Cập nhật</button>
                        </td>
                    </tr>
                </form>
                }
            </tbody>
        </table>
        <div class="pagination">
            <!-- Nút "Previous Page" -->
            @if (ViewBag.Pagination.CurrentPage > 1)
            {
                <a asp-controller="AdminChangeUserInfo" asp-action="Index" asp-route-page="@(ViewBag.Pagination.CurrentPage - 1)" class="prev">&laquo; Trang trước</a>
            }
            <!-- Hiển thị 4 trang đầu tiên -->
            @for (int i = 1; i <= Math.Min(4, ViewBag.Pagination.TotalPages); i++)
            {
                <a asp-controller="AdminChangeUserInfo" asp-action="Index" asp-route-page="@i" class="@(i == ViewBag.Pagination.CurrentPage ? "active" : "")">@i</a>
            }
            <!-- Nếu có nhiều hơn 8 trang, hiển thị dấu ba chấm -->
            @if (ViewBag.Pagination.TotalPages > 8 && ViewBag.Pagination.CurrentPage > 5)
            {
                <span>...</span>
            }
            <!-- Hiển thị trang hiện tại và các trang xung quanh nó nếu ở giữa -->
            @if (ViewBag.Pagination.TotalPages > 8)
            {
                @for (int i = Math.Max(5, ViewBag.Pagination.CurrentPage - 1); i <= Math.Min(ViewBag.Pagination.CurrentPage + 1, ViewBag.Pagination.TotalPages - 4); i++)
                {
                    <a asp-controller="AdminChangeUserInfo" asp-action="Index" asp-route-page="@i" class="@(i == ViewBag.Pagination.CurrentPage ? "active" : "")">@i</a>
                }
            }
            <!-- Hiển thị dấu ba chấm trước 4 trang cuối nếu cần -->
            @if (ViewBag.Pagination.TotalPages > 8 && ViewBag.Pagination.CurrentPage < ViewBag.Pagination.TotalPages - 4)
            {
                <span>...</span>
            }
            <!-- Hiển thị 4 trang cuối -->
            @for (int i = Math.Max(ViewBag.Pagination.TotalPages - 3, 5); i <= ViewBag.Pagination.TotalPages; i++)
            {
                <a asp-controller="AdminChangeUserInfo" asp-action="Index" asp-route-page="@i" class="@(i == ViewBag.Pagination.CurrentPage ? "active" : "")">@i</a>
            }
            <!-- Nút "Next Page" -->
            @if (ViewBag.Pagination.CurrentPage < ViewBag.Pagination.TotalPages)
            {
                <a asp-controller="AdminChangeUserInfo" asp-action="Index" asp-route-page="@(ViewBag.Pagination.CurrentPage + 1)" class="next">Trang tiếp theo &raquo;</a>
            }
        </div>
    </div>
</div>
        <!-- ./wrapper -->
        <!-- jQuery -->
        <script src="plugins/jquery/jquery.min.js"></script>
        <!-- jQuery UI 1.11.4 -->
        <script src="plugins/jquery-ui/jquery-ui.min.js"></script>
        <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
        <script>
            $.widget.bridge('uibutton', $.ui.button)
        </script>
        <!-- Bootstrap 4 -->
        <script src="plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- ChartJS -->
        <script src="plugins/chart.js/Chart.min.js"></script>
        <!-- Sparkline -->
        <script src="plugins/sparklines/sparkline.js"></script>
        <!-- JQVMap -->
        <script src="plugins/jqvmap/jquery.vmap.min.js"></script>
        <script src="plugins/jqvmap/maps/jquery.vmap.usa.js"></script>
        <!-- jQuery Knob Chart -->
        <script src="plugins/jquery-knob/jquery.knob.min.js"></script>
        <!-- daterangepicker -->
        <script src="plugins/moment/moment.min.js"></script>
        <script src="plugins/daterangepicker/daterangepicker.js"></script>
        <!-- Tempusdominus Bootstrap 4 -->
        <script src="plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
        <!-- Summernote -->
        <script src="plugins/summernote/summernote-bs4.min.js"></script>
        <!-- overlayScrollbars -->
        <script src="plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
        <!-- AdminLTE App -->
        <script src="dist/js/adminlte.js"></script>
        <!-- AdminLTE for demo purposes -->
        <script src="dist/js/demo.js"></script>
        <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
        <script src="dist/js/pages/dashboard.js"></script>
        <script src="js/admin.js"></script>
        <script>
            function timKiemNguoiDung() {
                var tuKhoa = document.getElementById("tukhoa").value;
                var kieuTimKhachHang = document.getElementById("kieuTimKhachHang").value;

                // Gửi dữ liệu tìm kiếm lên máy chủ bằng Ajax
                $.ajax({
                    type: "POST",
                    url: "./function/timkiemnguoidung.php", // Thay đổi đường dẫn đến tập tin PHP xử lý tìm kiếm
                    data: {
                        tuKhoa: tuKhoa,
                        kieuTimKhachHang: kieuTimKhachHang
                    },
                    success: function (response) {
                        // Hiển thị kết quả tìm kiếm trả về từ máy chủ
                        $("#resultUser").html(response);
                    }
                });
            }
        </script>
